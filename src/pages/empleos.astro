---
import Layout from '../layouts/Layout.astro';

// Sample job data - in a real app, this would come from a database
const jobs = [
  {
    id: '1',
    title: 'Desarrollador Frontend',
    company: 'TechSolutions',
    location: 'Remoto',
    type: 'Tiempo completo',
    description: 'Buscamos un desarrollador frontend con experiencia en React y conocimientos de UI/UX.'
  },
  {
    id: '2',
    title: 'Analista de Datos',
    company: 'DataInsights',
    location: 'Bogotá',
    type: 'Tiempo completo',
    description: 'Se requiere analista de datos con experiencia en SQL, Python y herramientas de visualización.'
  },
  // More jobs...
];
---

<Layout title="JobHub - Ofertas de Empleo">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6 text-center">Ofertas de Empleo</h1>
    
    <div class="space-y-6">
      {jobs.map(job => (
        <div class="bg-gray-800 rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-bold mb-2">{job.title}</h2>
          <div class="mb-2">
            <span class="text-blue-400">Empresa: {job.company}</span>
          </div>
          <div class="mb-4">
            <span>Ubicación: {job.location} • {job.type}</span>
          </div>
          <p class="mb-4">{job.description}</p>
          <a 
            href={`/job/${job.id}`} 
            class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded"
          >
            Ver Detalles
          </a>
        </div>
      ))}
    </div>
  </div>
</Layout>