---
import Layout from '../../layouts/Layout.astro';
import { FAKE_CANDIDATES } from '../../data/fakeData';
---

<Layout title="JobHub - Candidatos">
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">Candidatos Disponibles</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {FAKE_CANDIDATES.map((candidate) => (
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transition-transform transform hover:scale-105">
          <div class="p-4">
            <h3 class="text-lg font-semibold">{candidate.name}</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">{candidate.email}</p>
          </div>
          <div class="p-4 border-t border-gray-200 dark:border-gray-700">
            <p class="text-sm text-gray-700 dark:text-gray-300">{candidate.experience}</p>
            <p class="text-sm text-gray-700 dark:text-gray-300">Educaci√≥n: {candidate.education}</p>
            <div class="mt-2 flex flex-wrap gap-1">
              {candidate.skills.map((skill) => (
                <span class="inline-block bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full px-3 py-1 text-xs font-semibold">
                  {skill}
                </span>
              ))}
            </div>
            <a 
              href={`/candidates/${candidate.id}`} 
              class="mt-4 inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded"
            >
              Ver Perfil
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>